<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developerxy.sqli_test.ui.fragments.RepositoryDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/repo_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/github_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/github_mark" />

            <TextView
                android:id="@+id/repo_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/github_logo"
                android:layout_alignTop="@id/github_logo"
                android:layout_toRightOf="@id/github_logo"
                android:gravity="center_vertical|left"
                android:text="Comptable" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/repo_name_layout"
            android:orientation="vertical">



        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
